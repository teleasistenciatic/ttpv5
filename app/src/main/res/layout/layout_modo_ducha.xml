<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.local.android.teleasistenciaticplus.act.ducha.actModoDucha"
    android:background="#ff33b5e5">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconoModoDucha"
        android:src="@drawable/ducha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/modo_ducha_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:textSize="26dp"
        android:textColor="#ffFFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modo_ducha_boton_15_minutos"
        android:id="@+id/btn_ducha_15_minutos"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffFFFFFF"
        android:textSize="34dp"
        android:onClick="activarDucha"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modo_ducha_boton_30_minutos"
        android:id="@+id/btn_ducha_30_minutos"
        android:textColor="#ffFFFFFF"
        android:textSize="34dp"
        android:onClick="activarDucha"
        android:layout_above="@+id/btn_ducha_45_minutos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modo_ducha_boton_45_minutos"
        android:id="@+id/btn_ducha_45_minutos"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:textColor="#ffFFFFFF"
        android:textSize="34dp"
        android:onClick="activarDucha" />

</RelativeLayout>
